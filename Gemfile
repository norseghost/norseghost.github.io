source 'https://rubygems.org'
# 1. Pin URI to the version bundled with Ruby 2.7
gem 'uri', '0.10.0.2'
# Pin Nokogiri to 1.15.x to stay compatible with Ruby 2.7
gem 'nokogiri', '~> 1.15.0'
gem 'ffi', '< 1.17.0'
# Pin jekyll-scholar to 5.x to work with Jekyll 3.9 (required by github-pages)
gem 'jekyll-scholar', '~> 5.16'

# Minimal Mistakes Theme
gem 'minimal-mistakes-jekyll'

# GitHub Pages environment (This forces Jekyll 3.9.x)
gem 'github-pages', group: :jekyll_plugins

# Plugins
group :jekyll_plugins do
  gem 'jekyll-archives'
  gem 'jekyll-feed'
  gem 'jekyll-include-cache'
  gem 'jekyll-paginate-v2'
  gem 'jemoji'
end

gem "tzinfo-data"
gem 'bigdecimal'
gem 'csv'
gem 'json'
gem 'webrick', '~> 1.8'
